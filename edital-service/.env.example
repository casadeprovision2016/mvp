# edital-service Configuration

# Service Identity
SERVICE_NAME=edital-service
PORT=50051
ENVIRONMENT=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/cotai
DATABASE_POOL_SIZE=20

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0

# Observability
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=8090

# Multi-tenancy
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=https://auth.cotai.local
JWT_AUDIENCE=edital-service

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_RLS_ENABLED=true
FEATURE_AUDIT_ENABLED=true
